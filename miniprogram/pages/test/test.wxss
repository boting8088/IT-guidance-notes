.test {
  background-color: #00A99D;
  height: 600rpx;
  margin: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button {
  background-color: rgba(255, 255, 255, 0);
  border: 1px solid white;
  color: white;
}

.input {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: WhiteSmoke;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input input {
  width: 95%;
  height: 70rpx;
  border-radius: 5px;
  background-color: white;
}